<%= turbo_frame_tag dom_id(post) do %>
  <%= form_with model: post, local: false do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
    <%= form.submit %>
  <% end %>
<% end %>
