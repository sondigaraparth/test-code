<% if @post.persisted? %>
  <%= turbo_stream.prepend "posts", partial: "posts/post", locals: { post: @post } %>
  <%= turbo_stream.replace "new_post", partial: "posts/form", locals: { post: Post.new } %>
  <%= turbo_stream.update "notice", partial: "posts/notice", locals: { notice: "" } %>
<% else %>
  <%= turbo_stream.update "notice", partial: "posts/notice", locals: { notice: "Somthing wrong" } %>
<% end %>
